/**app.wxss**/
button::after{
border:none;
}
input{
outline:none;
border:none;
list-style: none;
}
.container {
  height: 100%;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-around;
  box-sizing: border-box;
} 
.between{
  justify-content: space-between;
}
.fl {
  float: left;
}
.fr {
  float: right;
}
.cf:after {
  content: "";
  display: table;
  height: 0;
  clear: both;
  visibility: hidden;
}
.p3{
  padding: 3%;
}
.pb{
  padding-bottom: 140rpx;
}

.mat10R{margin-top:10rpx;}
.mat20R{margin-top:20rpx;}
.mat30R{margin-top:30rpx;}
.mat50R{margin-top:50rpx;}

.db{
  border-bottom: 5px solid #f1f1f1;
}
.omit{
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
}
.fix_nav{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
  height: 110rpx;
  background-color: #fff;
  border-top: 1px solid #ddd;
}
.fix_nav navigator{
  text-align: center;
  width: 25%;
}
.fix_nav image{
  width: 47rpx;
  height: 40rpx;
  display: block;
  margin: 0 auto;
}
.fix_nav text{
  font-size: 28rpx;
  color: #bebebe;
  display: block;
}
.fix_nav text.on{
  color: #709EF4;
}
.fixed_nav{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
  height: 100rpx;
  line-height: 100rpx;
  background:#fff;
}
.big_bnt{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #F47070;
  font-size: 28rpx;
  color: #fff;
  border-radius: 3px;
}
.fixed{
  position: fixed;
  width: 100%;
}



/**
** 弹出框
 */

.popUp_Box{
  position:fixed;
  top:0;
  left:0;
  height:100%;
  width:100%;
}
.shadow{
  height:100%;
  width:100%;
  position:relative;
  background:#000;
  opacity:0.5;
  filter:alpha(opacity=50);
  z-index:10;
}
.show_Layer{
  position: absolute;
  background:#fff;
  border-radius:5px;
  z-index:11;
}
.centered{
  top:15%;
  left:50rpx;
}
.fixed_WH{
  width:650rpx;
  height:70%;
  top:15%;
  left:50rpx;
}
.authorized_Box{
  width:550rpx;
  height:350rpx;
  top:50%;
  margin-top: -250rpx;
  left:100rpx;
}
/*
***关闭按钮
*/
.show_Layer .clear{
  height:70rpx;
  margin:20rpx 20rpx 0;
}
/*
***授权框
*/
.authorized_Box{
  font-size:32rpx;
  text-align: center;
}
.authorized_Describe{
  line-height: 249rpx;
}
.authorized_Btn{
  width: 550rpx;
  height:100rpx;
  line-height:100rpx;
  display: flex;
  border-top:1rpx solid #999;
}
.authorized_Btn .btn_Cancel,.authorized_Btn .btn_OK{
  width:100%;
  line-height:100rpx;
  text-align:center;
}
.authorized_Btn .btn_Cancel{
  border-right:1rpx solid #999;
}
.authorized_Btn button{
  height:100rpx;
  line-height:100rpx;
  margin:0;
  padding: 0;
  background:none;
  border:none;
  font-size:32rpx;
}
button::after{
  border:none;
}
/*数据提示 没有更多*/
.data_suggest{
  text-align:center;
  padding:40rpx 0;
  color: #999;
}

button::after{
  border:none;
}

.centerByContent{
  height: auto;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
  display: flex;
}
.centerByContent .title{
  margin:auto 0 auto 0;
  width: 160rpx;
  color: #7c7c7c;
}
.centerByContent .centeredContent{width:520rpx;}
.centerByContent textarea{
  box-sizing: border-box;
  width: 520rpx;
}
.centerByContent image{
  margin:auto 0 auto 0;
  width: 30rpx;
  height:30rpx;
}

.centerByContent .title image{
  width:100rpx;
  height:100rpx;
}
.centerByContent_Right{margin: auto;}