.title{
  height: 90rpx;
  width: 100%;
}
.title image{
  width: 197rpx;
  height: 1px;
}
.title .text{
  font-size: 30rpx;
  color: #709EF4;
}
.sp_list{
  display:flex;
}
.sp_list navigator{
  width: 45.5%;
  margin-bottom: 20rpx;
  margin-left:3%;

}
.sp_list navigator image{
  width: 100%;
  height: 416rpx;
  border: 1px solid #ddd;
}
.sp_list navigator .name{
  margin: 10rpx 0;
}
.sp_list navigator .name .left{
  font-size: 28rpx;
}
.sp_list navigator .name .right{
  font-size: 28rpx;
  color: #F47070;
}
.sp_list navigator .concent{
  font-size: 24rpx;
  line-height: 180%;
  color: #ccc;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.tab_nav{
  height: 100rpx;
  line-break: 100rpx;
  background-color: #709EF4;
}
.tab_nav view{
  width: 30%;
  font-size: 24rpx;
  color: #fff;
  text-align: center;
  line-height: 94rpx;
}
.tab_nav view.on{
  border-bottom: 2px solid #fff;
}

/**
** 弹出框
 */

.popUp_Box{
  position:fixed;
  top:0;
  left:0;
  height:100%;
  width:100%;
}
.shadow{
  height:100%;
  width:100%;
  position:relative;
  background:#000;
  opacity:0.5;
  filter:alpha(opacity=50);
  z-index:10;
}
.show_Layer{
  position: absolute;
  background:#fff;
  border-radius:5px;
  z-index:11;
}
.centered{
  top:15%;
  left:50rpx;
}
.fixed_WH{
  width:650rpx;
  height:70%;
  top:15%;
  left:50rpx;
}
.authorized_Box{
  width:550rpx;
  height:350rpx;
  top:50%;
  margin-top: -250rpx;
  left:100rpx;
}
/*
***关闭按钮
*/
.show_Layer .clear{
  height:70rpx;
  margin:20rpx 20rpx 0;
}
/*
***授权框
*/
.authorized_Box{
  font-size:32rpx;
  text-align: center;
}
.authorized_Describe{
  line-height: 249rpx;
}
.authorized_Btn{
  width: 550rpx;
  height:100rpx;
  line-height:100rpx;
  display: flex;
  border-top:1rpx solid #999;
}
.authorized_Btn .btn_Cancel,.authorized_Btn .btn_OK{
  width:275rpx;
  line-height:100rpx;
}
.authorized_Btn .btn_Cancel{
  border-right:1rpx solid #999;
}
.authorized_Btn button{
  height:100rpx;
  line-height:100rpx;
  margin:0;
  padding: 0;
  background:none;
  border:none;
  font-size:32rpx;
}
button::after{
  border:none;
}
