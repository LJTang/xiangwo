.top{
  padding: 39rpx 0;
  border-bottom: 1px solid #f1f1f1;
}
.top image{
  width: 120rpx;
  height: 130rpx;
  border: 1px solid #e9e9e9;
}
.top .name{
  font-size: 28rpx;
  padding-left: 8rpx;
  display: block;
  margin-top: 10rpx;
}
.top .price{
  color: #f47070;
  font-size: 28rpx;
  padding-right: 8rpx;
  margin-top: 40rpx;
}
.top .right{
  margin-left: 30rpx;
}
.list .left{
  font-size: 28rpx;
  color: #999;
}
.list .left text{
  color: #666;
  text-align: justify;
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis;

}
.list .right{
  width: 150rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  color: #f47070;
  border:1px solid #f47070;
  border-radius: 3px;
  font-size: 24rpx;
  margin-top: 10rpx;
  position: absolute;
  right: 0;
  top: 3%;
}
.list{
  font-size: 28rpx;
  color: #999;
  padding: 4% 0;
  border-bottom: 1px solid #f1f1f1;
  position: relative;
}
.list text{
  color: #666;
}